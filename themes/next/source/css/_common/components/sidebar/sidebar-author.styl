.site-author-image {
  display: block;
  margin: 0 auto;
  max-width: 96px;
  height: 90px;
  border: 2px solid #333;
  padding: 2px;
  border-radius: 50%
}

.site-author-name {
  margin: 5px 0 0;
  font-size: 17px;
  color: $site-author-name-color;
}

.site-description {
  margin-top: 5px;
  font-size: 15px;
  color: $site-description-color;
}
